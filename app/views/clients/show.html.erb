<%= render 'layouts/sidebar' %>
<div class="page-content">  
  <div class="container-fluid">
    <div class="mail-apps-wrap">
      <div class="the-box bg-primary no-border no-margin heading">
        <div class="row">
          <div class="col-sm-6">
            <h1><i class="fa fa-male icon-lg icon-circle icon-bordered"></i> Cliente</h1>
          </div>         
        </div>
      </div> 
    </div>
    <br>
      <a class="btn btn-danger" href="/clients">
        <i class="fa fa-arrow-left"> Voltar</i>
      </a>

      <a class="btn btn-primary" href="/contacts/<%= @client.id %>/new">
        <i class="fa fa-plus-square"> Novo Contato</i>
      </a>
    <br>
    <br>    
    <div class="row">
      <div class="col-md-8">
        <div class="panel with-nav-tabs panel-primary panel-square panel-no-border">
          <div class="panel-heading">          
          </div>
            <div class="panel-body">
              <div class="tab-content">                 
                <div class="tab-pane fade active in" id="panel-about">
                  <h4 class="small-heading more-margin-bottom">PERFIL</h4>
                  <form class="form-horizontal" role="form">
                  <div class="form-group">
                    <label class="col-sm-2 control-label">Nome</label>
                    <div class="col-sm-10">
                      <p class="form-control-static"><%= @client.name %></p>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">Email</label>
                    <div class="col-sm-10">
                      <p class="form-control-static"><%= @client.email %></p>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">Facebook</label>
                    <div class="col-sm-10">
                      <p class="form-control-static"><%= @client.facebook %></p>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">Twitter</label>
                    <div class="col-sm-10">
                      <p class="form-control-static"><%= @client.twitter %></p>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="col-sm-2 control-label">Telefone</label>
                    <div class="col-sm-10">
                      <p class="form-control-static"><%= @client.phone %></p>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-sm-2 control-label">Website</label>
                    <div class="col-sm-10">
                      <p class="form-control-static"><%= @client.website %></p>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="col-sm-2 control-label">Descrição</label>
                    <div class="col-sm-10">
                      <p class="form-control-static">
                        <%= @client.description %>
                      </p>
                    </div>
                  </div>       
                </div>      
                <div class="col-md-4">
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <% @contacts_list.each do |c| %>                  
            <div class="panel panel-transparent panel-square">
              <div class="panel-heading">
                <h3 class="panel-title">
                  <a class="block-collapse" data-toggle="collapse" href= <%= "#message#{c.id}" %> >
                    <strong>Contato - <%= c.name %></strong> 
                    <span class="right-content">
                      <span class="time"><%= c.email %></span>
                    </span>
                  </a>
                </h3>
              </div>              
              <div id=<%= "message#{c.id}" %> class="collapse">
                <div class="panel-body">
                  <p>
                    Nome: <%= c.name %><br>

                    Email: <%= c.email %><br>

                    Facebook: <%= c.facebook %><br>

                    Twitter: <%= c.twitter %><br>

                    Cargo: <%= c.occupation %><br>

                    Linked-in: <%= c.linkedin %><br>

                    Website: <%= c.website %><br>

                    Background: <%= c.background %><br>

                    <a href="/contacts/<%= c.id %>/edit"><span class="label label-primary">Editar</span></a>
                  </p>
                </div>
                <div class="panel-footer"></div>
              </div>
            </div>
          <%end%>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="page-content">
  <%= render 'layouts/footer' %>
</div>